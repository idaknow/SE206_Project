	public SaveProjFiles(String v,boolean existingProj){
		if (existingProj){
			vPath = v;
			String[] split = v.split("/");
			v = split[split.length-1];
			ProjectName = v;
			path = System.getProperty("user.home");
		} else {
			String[] split = v.split("/");
			v = split[split.length-1];
			int i = v.indexOf(".");
			v = v.substring(0, i);
			this.VideoName = v;
		}
	}

