package functionality;
import javax.swing.SwingWorker;

import GUI.Mainframe;

public class videoSliderBar extends SwingWorker<Void, Integer> {

	private long totaltime;
	private double currentsliderValue;
	private double incrementSlider;
	private boolean run;

	videoSliderBar(long totaltime, boolean run){
		this.totaltime = totaltime;
		this.run = run;
	}

	@Override
	protected Void doInBackground() throws Exception {
		while(run && !isCancelled() && Mainframe.getMp() != null){
			currentsliderValue = Mainframe.getMp().getTime()* 100 / totaltime;
			//System.out.println(currentsliderValue);
			//GUI.Mainframe.videoSlider.setValue((int)currentsliderValue);
		}
		return null;
	}

	@Override
	protected void done() {
		
	}

}
